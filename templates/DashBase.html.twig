<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Dashboard{% endblock %}</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <style>
        body {
            background-color: #f8f9fa;
        }
        .navbar {
            background-color: #fac998;
        }
        .navbar-brand, .nav-link {
            color: #000000 ;
        }
        .sidebar {
            height: 100vh;
            width: 250px;
            position: fixed;
            top: 0;
            left: 0;
            background-color: #fac998;
            padding-top: 20px;
        }
        .sidebar .nav-link {
            color: #000000;
            margin: 10px 0;
        }
        .content {
            margin-left: 260px;
            padding: 20px;
            color: #000000;
        }
    </style>
</head>
<body>
    {% if app.user != null %}
        <!-- Navbar -->
        <nav class="navbar navbar-expand-lg navbar-dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">Dashboard</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_logout') }}">Sign Out</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        <!-- Sidebar -->
        <div class="sidebar">
            <ul class="nav flex-column">
                <h1 class="text">Allegui</h1>
                <li class="nav-item">
                    <h1 class="nav-link" href="#">üè† Dashboard</h1>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{path('app_profile')}}">üë§ Profile</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_produit_all') }}">üì¶ Produit</a>
                </li>
            </ul>
        </div>

        <!-- Main Content -->
        <div class="content">
            {% block body %}
                {% if is_granted('ROLE_ADMIN') %}
                    <h2>Welcome Admin</h2>
                    <p>You have access to the admin dashboard.</p>
                {% else %}
                    <h2>Welcome {{ app.user.username }}</h2>
                    <p>You are logged in, but not an admin.</p>
                {% endif %}
            {% endblock %}
        </div>
    {% else %}
        <!-- Redirect or show message if the user is not logged in -->
        <p>You need to log in first to access the dashboard.</p>
        <a href="{{ path('app_login') }}">Login</a>
    {% endif %}

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
