<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Dashboard{% endblock %}</title>
    <link href="{{ asset('assets/img/IconA.png') }}" rel="icon">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Arial', sans-serif;
        }

        /* Navbar */
        .navbar {
            background: #333;
            color: white;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            z-index: 1030; /* Ensures the navbar stays on top */
        }
        .navbar-brand {
            font-size: 1.5rem;
            font-weight: bold;
            color: #ff7a3f !important;
        }
        .navbar .nav-link {
            color: white !important;
            font-weight: bold;
            padding: 10px 15px;
            transition: all 0.3s;
        }
        .navbar .dropdown-menu {
            background: #444;
            border: none;
        }
        .navbar .dropdown-item {
            color: white;
        }
        .navbar .dropdown-item:hover {
            background: #ff7a3f;
            color: white;
        }
        .navbar .profile-image {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            object-fit: cover;
        }

        /* Sidebar */
        .sidebar {
            height: 100vh;
            width: 260px;
            position: fixed;
            top: 0;
            left: 0;
            background: #222;
            color: white;
            padding-top: 20px;
            transition: width 0.3s;
        }
        .sidebar h1 {
            text-align: center;
            font-size: 1.8rem;
            margin-bottom: 20px;
            color: #ff7a3f;
        }
        .sidebar .nav-link {
            color: white;
            padding: 10px 20px;
            margin: 5px 10px;
            border-radius: 5px;
            font-size: 1rem;
            display: flex;
            align-items: center;
            gap: 10px;
            transition: all 0.3s;
        }
        .sidebar .nav-link:hover, .sidebar .nav-link.active {
            background: #ff7a3f;
            color: white;
        }
        .sidebar .nav-link i {
            font-size: 1.2rem;
        }

        /* Main Content */
        .content {
            margin-left: 280px;
            padding: 20px;
            transition: margin-left 0.3s;
            margin-top: 70px; /* Adjusts content position to account for navbar height */

        }

        /* Responsive Design */
        @media (max-width: 768px) {
            .sidebar {
                width: 0;
                overflow: hidden;
            }
            .sidebar .nav-link {
                opacity: 0;
            }
            .content {
                margin-left: 0;
            }
        }

        /* Offcanvas */
        .offcanvas {
            background: #222;
        }
        .offcanvas .nav-link {
            color: white;
        }
        .offcanvas .nav-link:hover {
            background: #ff7a3f;
            color: white;
        }
    </style>
</head>
<body>
    {% if app.user != null %}
        <!-- Navbar -->
        <nav class="navbar navbar-expand-lg">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">Dashboard</a>
                <button 
                    class="navbar-toggler text-white" 
                    type="button" 
                    data-bs-toggle="offcanvas" 
                    data-bs-target="#sidebarOffcanvas" 
                    aria-controls="sidebarOffcanvas">
                    ‚ò∞
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto align-items-center">
                        <!-- Profile Info -->
                        <li class="nav-item dropdown">
                            <a 
                                class="nav-link dropdown-toggle d-flex align-items-center gap-2" 
                                href="#" 
                                id="userDropdown" 
                                role="button" 
                                data-bs-toggle="dropdown" 
                                aria-expanded="false">
                                {% if app.user.image %}
                                    <img src="{{ asset('uploads/' ~ app.user.image) }}" 
                                         alt="Profile Image" 
                                         class="profile-image">
                                {% else %}
                                    <img src="{{ asset('assets/img/default-user.png') }}" 
                                         alt="Default Profile Image" 
                                         class="profile-image">
                                {% endif %}
                                <span>{{ app.user.email }}</span>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                <li><a class="dropdown-item" href="{{ path('app_profile', {id: app.user.id}) }}">Profile</a></li>
                                <li><a class="dropdown-item" href="{{ path('app_logout') }}">Sign Out</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        <!-- Sidebar -->
        <div class="sidebar">
            <h1>Allegui</h1>
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_profile', {id: app.user.id}) }}"><i class="bi bi-person"></i> Profile</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_produit_all') }}"><i class="bi bi-box"></i> Article</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('artiste_index') }}"><i class="bi bi-brush"></i> Artiste</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('dashboard_contacts') }}"><i class="bi bi-envelope"></i> Contacts</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_evenement') }}"><i class="bi bi-calendar-event"></i> Evenement</a>
                </li>
            </ul>
        </div>

        <!-- Offcanvas Sidebar -->
        <div class="offcanvas offcanvas-start" tabindex="-1" id="sidebarOffcanvas" aria-labelledby="sidebarOffcanvasLabel">
            <div class="offcanvas-header">
                <h5 class="offcanvas-title text-white" id="sidebarOffcanvasLabel">Menu</h5>
                <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
            </div>
            <div class="offcanvas-body">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_profile', {id: app.user.id}) }}">üë§ Profile</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_produit_all') }}">üì¶ Article</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('artiste_index') }}">üßëüèª‚Äçüé® Artiste</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_logout') }}">üö™ Sign Out</a>
                    </li>
                </ul>
            </div>
        </div>

        <!-- Main Content -->
        <div class="content">
            {% block body %}
                {% if is_granted('ROLE_ADMIN') %}
                    <h2>Welcome Admin</h2>
                    <p>You have access to the admin dashboard.</p>
                {% else %}
                    <h2>Welcome {{ app.user.username }}</h2>
                    <p>You are logged in, but not an admin.</p>
                {% endif %}
            {% endblock %}
        </div>
    {% else %}
        <div class="container text-center mt-5">
            <p>You need to log in first to access the dashboard.</p>
            <a href="{{ path('app_login') }}" class="btn btn-primary">Login</a>
        </div>
    {% endif %}

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
