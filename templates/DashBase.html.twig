<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Dashboard{% endblock %}</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <style>
        body {
            background-color: #f8f9fa;
        }
        .navbar {
            background: #ffffff;
        }
        .navbar-brand, .nav-link {
            color: black;
        }
        .sidebar {
            height: 100vh;
            width: 250px;
            position: fixed;
            top: 0;
            left: 0;
            background: linear-gradient(180deg, rgba(237, 197, 164, 1) 0%, rgba(255, 122, 63, 1) 100%);
            padding-top: 20px;
            display: none; /* Hidden by default for mobile */
        }
        .sidebar .nav-link {
            color: #000000;
            margin: 10px 0;
        }
        .content {
            margin-left: 260px;
            padding: 20px;
        }
        @media (max-width: 768px) {
            .sidebar {
                display: none; /* Hidden on mobile */
            }
            .content {
                margin-left: 0;
            }
        }
        @media (min-width: 769px) {
            .sidebar {
                display: block; /* Visible on larger screens */
            }
        }
    </style>
</head>
<body>
    {% if app.user != null %}
        <!-- Navbar -->
        <nav class="navbar navbar-expand-lg navbar-dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">Dashboard</a>
                <button 
                    class="navbar-toggler" 
                    type="button" 
                    data-bs-toggle="offcanvas" 
                    data-bs-target="#sidebarOffcanvas" 
                    aria-controls="sidebarOffcanvas">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <p class="text-muted" style="font-size: 14px;">{{ app.user.email }}</p>
                            <a class="nav-link" href="{{ path('app_logout') }}">Sign Out</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        <!-- Sidebar for Desktop -->
        <div class="sidebar">
            <ul class="nav flex-column">
                <h1 class="text-center">𝓐𝓵𝓵𝓮𝓰𝓾𝓲</h1>
                <h5>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_profile', {id: app.user.id}) }}">👤 Profile</a>
                    </li>
                </h5>
                <h5>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_produit_all') }}">📦 Article</a>
                    </li>
                </h5>
                <h5>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('artiste_index') }}"> 🧑🏻‍🎨​ Artiste</a>
                    </li>
                </h5>
            </ul>
        </div>

        <!-- Offcanvas Sidebar for Mobile -->
        <div class="offcanvas offcanvas-start" tabindex="-1" id="sidebarOffcanvas" aria-labelledby="sidebarOffcanvasLabel">
            <div class="offcanvas-header">
                <h5 class="offcanvas-title" id="sidebarOffcanvasLabel">Menu</h5>
                <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
            </div>
            <div class="offcanvas-body">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_profile', {id: app.user.id}) }}">👤 Profile</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_produit_all') }}">📦 Article</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('artiste_index') }}"> 🧑🏻‍🎨​ Artiste</a>
                    </li>
                </ul>
            </div>
        </div>

        <!-- Main Content -->
        <div class="content">
            {% block body %}
                {% if is_granted('ROLE_ADMIN') %}
                    <h2>Welcome Admin</h2>
                    <p>You have access to the admin dashboard.</p>
                {% else %}
                    <h2>Welcome {{ app.user.username }}</h2>
                    <p>You are logged in, but not an admin.</p>
                {% endif %}
            {% endblock %}
        </div>
    {% else %}
        <!-- Redirect or show message if the user is not logged in -->
        <div class="container text-center mt-5">
            <p>You need to log in first to access the dashboard.</p>
            <a href="{{ path('app_login') }}" class="btn btn-primary">Login</a>
        </div>
    {% endif %}

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
