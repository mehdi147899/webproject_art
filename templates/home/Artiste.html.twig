{% extends 'base.html.twig' %}

{% block title %}All Artists{% endblock %}

{% block body %}
<div class="container mt-5">
    <h2 class="text-center mb-4">Meet Our Artists</h2>

    {% if artistes|length > 0 %}
        <div class="row">
            {% for artiste in artistes %}
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        <img 
                            src="{{ asset('uploads/' ~ artiste.image) }}" 
                            class="card-img-top fixed-size-img" 
                            alt="{{ artiste.nom }}">

                        <div class="card-body">
                            <h5 class="card-title">{{ artiste.nom }} {{ artiste.prenom }}</h5>
                            <p class="card-text"><strong>Date of Birth:</strong> {{ artiste.dateDeNaissance|date('d-m-Y') }}</p>
                            <p class="card-text">{{ artiste.bio|slice(0, 100) ~ '...' }}</p>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <p class="text-center">No artists available at the moment.</p>
    {% endif %}
</div>
{% endblock %}
