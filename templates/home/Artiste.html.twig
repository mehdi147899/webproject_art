{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-5">
        <h2 class="text-center mb-4" style="margin-top: 150px;">Artiste</h2>

        <div class="row justify-content-center">
            <div class="col-md-8">

                {% for artiste in artistes %}
                    <div class="card mb-3">
                        <div class="row g-0">
                            <!-- Image on the left -->
                            <div class="col-md-4">
                                <img src="{{ asset('uploads/' ~ artiste.image) }}" alt="{{ artiste.Nom }}" class="img-fluid rounded-start">
                            </div>

                            <!-- Text content on the right -->
                            <div class="col-md-8">
                                <div class="card-body">
                                    <h5 class="card-title">{{ artiste.Nom }} {{ artiste.prenom }}</h5>
                                    
                                    <!-- Date of Birth -->
                                    <p class="card-text"><strong>Date of Birth:</strong> {{ artiste.dateDeNaissance|date('d-m-Y') }}</p>

                                    <p class="card-text">{{ artiste.bio }}</p>
                                    
                                    <!-- Buttons for Edit -->
                                    <div class="d-flex justify-content-end">
                                    </div>
                                </div>
                            </div>
                            
                            {% if artiste.videoUrls is not empty %}
    <h6 class="mt-3">Videos:</h6>
    <ul>
        {% set videoUrls = artiste.videoUrls|split(',') %}
        {% for videoUrl in videoUrls %}
            <li>
                <iframe width="100%" height="315" src="{{ videoUrl|trim }}" frameborder="0" allowfullscreen></iframe>
            </li>
        {% endfor %}
            </ul>
        {% endif %}

                        </div>
                    </div>
                {% else %}
                    <p class="text-center">No artistes found.</p>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
