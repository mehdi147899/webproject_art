{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-5" style="margin-top: 290px;">
        <div class="row justify-content-center"style="margin-top: 150px;">
            <!-- Event Image -->
            <div class="col-md-6 col-12 mb-4">
                <div class="event-image-container">
                    <img src="{{ asset('uploads/' ~ evenement.image) }}" 
                         class="img-fluid rounded shadow-sm" 
                         alt="{{ evenement.name }}" 
                         style="width: 100%; height: auto; object-fit: cover;">
                </div>
            </div>

            <!-- Event Details -->
            <div class="col-md-6 col-12">
                <h1 class="display-5 mb-3 text-primary">{{ evenement.name }}</h1>
                <p><strong>Date:</strong> {{ evenement.date|date('d-m-Y H:i') }}</p>
                <p><strong>Location:</strong> {{ evenement.lieu }}</p>
                <p><strong>Description:</strong></p>
                <p>{{ evenement.description }}</p>

                <a href="{{ path('Event-app') }}" class="btn btn-outline-primary mt-3">Back to Events</a>
            </div>
        </div>

        
    </div>

    <style>
        .container {
            max-width: 1200px;
        }

        .event-image-container img {
            max-height: 400px;
            object-fit: cover;
        }

        .display-5 {
            font-size: 2.5rem;
        }

        .btn-outline-primary {
            border-color: #ff7a3f;
            color: #ff7a3f;
        }

        .btn-outline-primary:hover {
            background-color: #ff7a3f;
            color: white;
        }

        .btn-primary {
            background-color: #ff7a3f;
            border-color: #ff7a3f;
        }

        .btn-primary:hover {
            background-color: #e66b36;
        }

        @media (max-width: 768px) {
            .display-5 {
                font-size: 1.8rem;
            }

            .event-image-container img {
                max-height: 300px;
            }
        }
    </style>
{% endblock %}
