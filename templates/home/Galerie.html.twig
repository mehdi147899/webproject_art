{% extends 'base.html.twig' %}


{% block title %}Galerie{% endblock %}

{% block body %}
<section id="galerie" class="galerie section">
    
    <div class="container">
        <div class="row">
            {% for produit in pagination.items %}
                <div class="col-lg-4 mb-4">
                    <a href="{{ path('app_produit_detail', {'id': produit.id}) }}" class="text-decoration-none">

                    <article>
                        <div class="post-img">
                            <img src="assets/img/blog/blog-5.jpg" alt="{{ produit.nom }}" class="img-fluid">
                        </div>
                        <p class="post-category">{{ produit.nom }}</p>
                        <p>{{ produit.description|length > 100 ? produit.description|slice(0, 100) ~ '...' : produit.description }}</p>
                        <p><strong>Prix:</strong> {{ produit.prix }} â‚¬</p>
                    </article>
                </a>

                </div>
            {% else %}
                <p class="text-center">Aucun produit disponible pour le moment.</p>
            {% endfor %}
        </div>

        <div class="d-flex justify-content-center mt-4">
            {{ knp_pagination_render(pagination) }}
        </div>
    </div>
</section>
{% endblock %}



