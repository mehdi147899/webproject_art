{% extends 'base.html.twig' %}

{% block title %}{{ 'homepage.title'|trans }}{% endblock %}

{% block body %}
<style>
  .event-card {
      background: #fff;
      border: 1px solid #ddd;
      border-radius: 8px;
      overflow: hidden;
      transition: transform 0.3s, box-shadow 0.3s;
  }
  .event-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
  }
  .event-card img {
      width: 100%;
      height: 150px;
      object-fit: cover;
  }
  .event-card-body {
      padding: 15px;
  }
  .event-date {
      font-size: 0.9rem;
      color: #888;
  }
  .event-title {
      font-size: 1.2rem;
      font-weight: bold;
      color: #333;
  }
  .event-location {
      font-size: 0.9rem;
      color: #555;
  }
</style>
<main class="main">
    <section id="hero" class="hero section dark-background">
        <img src="{{ asset('assets/img/MixCollage-02-Dec-2024-07-22-PM-9029.avif') }}" alt="" data-aos="fade-in">
        <div class="container">
            <div class="row">
                <div class="col-lg-10">
                    <h2 data-aos="fade-up" data-aos-delay="100">{{ 'homepage.greeting'|trans }}</h2>
                    <h2 data-aos="fade-up" data-aos-delay="100">{{ 'homepage.intro'|trans }}</h2>
                </div>
            </div>
        </div>
    </section>

    <section id="Galerie" class="features section">
        <div class="container section-title" data-aos="fade-up">
            <h2>{{ 'homepage.gallery_section_title'|trans }}</h2>
        </div>

        <div class="container">
            <div class="row gy-4 align-items-stretch justify-content-between features-item">
                <div class="col-lg-6 d-flex align-items-center features-img-bg" data-aos="zoom-out">
                    <img src="{{ asset('assets/img/TAb-7.jpg') }}" class="img-fluid" alt="">
                </div>
                <div class="col-lg-5 d-flex justify-content-center flex-column" data-aos="fade-up">
                    <h3>{{ 'homepage.gallery_subtitle'|trans }}</h3>
                    <p>{{ 'homepage.gallery_description'|trans }}</p>
                    <a href="#" class="btn btn-get-started align-self-start">{{ 'homepage.explore_gallery'|trans }}</a>
                </div>
            </div>
        </div>
    </section>
    

    <section id="Galerie" class="features section">
      <div class="container section-title" data-aos="fade-up">
          <h2>{{ 'homepage.nearest_events_title'|trans }}</h2>
      </div>
<div class="container mt-5">
    <div class="row g-4">
        {% for event in events %}
            <div class="col-md-3">
                <div class="event-card">
                    <a href="{{ path('evenement_Details', {'id': event.id}) }}">
                        <img src="{{ asset('uploads/' ~ event.image) }}" alt="{{ event.getName(app.request.locale) }}" class="img-fluid rounded shadow-sm">
                        <div class="event-card-body mt-2">
                            <p class="event-date text-muted small">{{ event.date|date('d M Y, H:i') }}</p>
                            <h5 class="event-title">{{ event.getName(app.request.locale) }}</h5>
                            <p class="event-location text-secondary">{{ event.lieu }}</p>
                        </div>
                    </a>
                </div>
            </div>
        {% else %}
            <div class="col-12">
                <p class="text-center text-muted">No events available at the moment.</p>
            </div>
        {% endfor %}
    </div>
</div>
  </section>

    <section id="portfolio" class="portfolio section">
        <div class="container section-title" data-aos="fade-up">
          <h2>{{ 'homepage.portfolio_title'|trans }}</h2>
        </div><!-- End Section Title -->
  
        <div class="container">
  
          <div class="isotope-layout" data-default-filter="*" data-layout="masonry" data-sort="original-order">
  
            <div class="row gy-4 isotope-container" data-aos="fade-up" data-aos-delay="200">
  
              <!-- Each portfolio item can also have translation keys for titles and descriptions if needed -->
              <div class="col-lg-4 col-md-6 portfolio-item isotope-item filter-app">
                <img src="assets/img/masonry-portfolio/masonry-portfolio-1.jpg" class="img-fluid" alt="">
                <div class="portfolio-info">
                  <h4>{{ 'homepage.portfolio_item_app1_title'|trans }}</h4>
                  <p>{{ 'homepage.portfolio_item_app1_desc'|trans }}</p>
                  <a href="assets/img/masonry-portfolio/masonry-portfolio-1.jpg" title="App 1"
                    data-gallery="portfolio-gallery-app" class="glightbox preview-link"><i class="bi bi-zoom-in"></i></a>
                  <a href="portfolio-details.html" title="{{ 'homepage.more_details'|trans }}" class="details-link"><i
                      class="bi bi-link-45deg"></i></a>
                </div>
              </div><!-- End Portfolio Item -->
  
              <!-- Repeat similar translation usage for all portfolio items -->
              <div class="col-lg-4 col-md-6 portfolio-item isotope-item filter-product">
                <img src="assets/img/masonry-portfolio/masonry-portfolio-2.jpg" class="img-fluid" alt="">
                <div class="portfolio-info">
                  <h4>{{ 'homepage.portfolio_item_product1_title'|trans }}</h4>
                  <p>{{ 'homepage.portfolio_item_product1_desc'|trans }}</p>
                  <a href="assets/img/masonry-portfolio/masonry-portfolio-2.jpg" title="Product 1"
                    data-gallery="portfolio-gallery-product" class="glightbox preview-link"><i
                      class="bi bi-zoom-in"></i></a>
                  <a href="portfolio-details.html" title="{{ 'homepage.more_details'|trans }}" class="details-link"><i
                      class="bi bi-link-45deg"></i></a>
                </div>
              </div>
  
              <!-- Continue this pattern for all portfolio items -->
              <div class="col-lg-4 col-md-6 portfolio-item isotope-item filter-branding">
                <img src="assets/img/masonry-portfolio/masonry-portfolio-3.jpg" class="img-fluid" alt="">
                <div class="portfolio-info">
                  <h4>{{ 'homepage.portfolio_item_branding1_title'|trans }}</h4>
                  <p>{{ 'homepage.portfolio_item_branding1_desc'|trans }}</p>
                  <a href="assets/img/masonry-portfolio/masonry-portfolio-3.jpg" title="Branding 1"
                    data-gallery="portfolio-gallery-branding" class="glightbox preview-link"><i
                      class="bi bi-zoom-in"></i></a>
                  <a href="portfolio-details.html" title="{{ 'homepage.more_details'|trans }}" class="details-link"><i
                      class="bi bi-link-45deg"></i></a>
                </div>
              </div>

              <!-- ... Repeat for all remaining portfolio items without changing images ... -->

            </div><!-- End Portfolio Container -->

            <div class="container mt-5">
              <div class="container section-title" data-aos="fade-up">
                <h2>{{ 'homepage.artist_section_title'|trans }}</h2>
              </div><!-- End Section Title -->
              <div class="row justify-content-center">
                  <div class="col-md-8">
      
                      {% for artiste in artistes %}
                          <div class="card mb-3">
                              <div class="row g-0">
                                  <!-- Image on the left -->
                                  <div class="col-md-4">
                                      <img src="{{ asset('uploads/' ~ artiste.image) }}" alt="{{ artiste.Nom }}" class="img-fluid rounded-start">
                                  </div>
      
                                  <!-- Text content on the right -->
                                  <div class="col-md-8">
                                      <div class="card-body">
                                          <h5 class="card-title">{{ artiste.Nom }} {{ artiste.prenom }}</h5>
                                          
                                          <p class="card-text"><strong>{{ 'homepage.date_of_birth'|trans }}:</strong> {{ artiste.dateDeNaissance|date('d-m-Y') }}</p>
      
<p class="card-text">
    {% if app.request.locale == 'en' %}
        {{ artiste.bioEn }}
    {% elseif app.request.locale == 'fr' %}
        {{ artiste.bioFr }}
    {% elseif app.request.locale == 'de' %}
        {{ artiste.bioDe }}
    {% else %}
        {{ artiste.bioFr }} {# Default to French if locale is not found #}
    {% endif %}
</p>
                                          
                                          <div class="d-flex justify-content-end">
                                          </div>
                                      </div>
                                  </div>
                      {% endfor %}
                  </div>
              </div>
          </div>

          </div>
       
        </div>
  
      </section>
</main>
{% endblock %}
