{% extends 'Dashbase.html.twig' %}

{% block title %}Profile{% endblock %}

{% block body %}
<a href="{{ path('app_profile', {id: app.user.id}) }}">Go to Profile</a>

<form method="POST" enctype="multipart/form-data" action="{{ path('app_profile', {id: app.user.id}) }}">
    <label for="image">Upload Profile Image:</label>
    <input type="file" name="image" id="image" />
    <button type="submit">Update Profile</button>
</form>

{% if user.image %}
    <img src="{{ asset('uploads/' ~ user.image) }}" alt="Profile Image" />
{% else %}
    <p>No profile image uploaded.</p>
{% endif %}

{% endblock %}
